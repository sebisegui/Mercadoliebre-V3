
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Ofertas</h2>
        </div>
        <% for(let i=0;i<4;i++) {%> 
        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
                <a href="/products/detail/<%= ofertas[i].id%>">   
                    <figure class="product-box_image">
                        <img src="/images/<%= ofertas[i].image%> " alt="imagen de producto">
                    </figure>
                    <article class="product-box_data">
                        <% let precioFinal = (ofertas[i].price)-((ofertas[i].price)*((ofertas[i].discount)/100))%>
                        <h2>$<%= toThousand(precioFinal)%></h2>
                        <span><%= ofertas[i].discount%>% OFF</span>
                        <p><%= ofertas[i].description%></p>
                        <i class="fas fa-truck"></i>
                    </article>
                </a>
            </section>
        </div>
        <% }%> 
    </div>
</div>

